<% layout('/layouts/boilerplate'); %>
<div class="d-flex align-items-center justify-content-center" id="brewHeader">
    <h1>All Breweries</h1>
</div>



<% for (let brewery of breweries) { %>
<div class="card border-dark mb-3 bg-dark ctext1">
    <div class="row border-dark">
        <div class="col-md-3">
            <img class="img-fluid w-100 h-100" alt="" src="<%=brewery.photoURL%>">
        </div>
        <div class="col-md-9 d-flex">

            <div class="card-body border-dark d-flex flex-column">
                <h3 class="card-title"><%= brewery.name %> </h3>
                <p class="card-text"><%= brewery.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= brewery.location%></small>
                </p>
                <div class="d-flex justify-content-end mt-auto">
                    <div class="">
                        <a class="btn btn-outline-light" href="/breweries/<%=brewery._id%> ">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%} %>

<div class="d-flex justify-content-center align-items-center">
    <a href="/breweries/new" class="btn btn-dark btn-lg mb-3">Add a Brewery</a>
</div>