<% layout('/layouts/boilerplate'); %>

<h1>All Breweries</h1>




<% for (let brewery of breweries) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">
            <img class="img-fluid w-100 h-100" alt="" src="<%=brewery.photoURL%>">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h3 class="card-title"><%= brewery.name %> </h3>
                <p class="card-text"><%= brewery.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= brewery.location%></small>
                </p>
                <a class="btn btn-dark" href="/breweries/<%=brewery._id%>">View <%=brewery.title%></a>
            </div>
        </div>
    </div>
</div>
<%} %>

<div class="d-flex justify-content-center align-items-center">
    <a href="/breweries/new" class="btn btn-success btn-lg mb-3">Add a Brewery</a>
</div>